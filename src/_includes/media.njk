<a href="/{{ root }}">{{ site.back_home_text }}</a>

<article>
  <h1>{{ title }}</h1>
  
	<div class="container-column">
	{% for item in entries %}
	<div class="container">
		<div class="media">
			<img src="{{ item.poster }}">
		</div>
		<div class="container-column" style="gap:0px">
			<span>
				<a href="{{ item.url }}" target="_blank"> {{ item.title }}</a>
				{% if item.year %} ({{ item.year }}) {% endif %}
			</span>
			<span><strong>Rating:</strong> {{ item.rating }}</span>
			<span><strong>Status:</strong> {{ item.status }}</span>
		</div>
	</div>
	{% endfor %}
	</div>

</article>
